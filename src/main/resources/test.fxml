<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.PaymentController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <Label text="ID:" />
        <TextField fx:id="idField" GridPane.columnIndex="1" />
        <Label text="Description:" GridPane.rowIndex="1" />
        <TextField fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label text="Amount:" GridPane.rowIndex="2" />
        <TextField fx:id="amountField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Button text="Add" onAction="#handleAdd" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <Button text="Delete" onAction="#handleDelete" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <TableView fx:id="transactionTable" GridPane.columnIndex="2" GridPane.rowIndex="0">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" />
                <TableColumn fx:id="descriptionColumn" text="Description" />
                <TableColumn fx:id="amountColumn" text="Amount" />
            </columns>
        </TableView>
    </children>
</GridPane>
